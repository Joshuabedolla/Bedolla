@model Joshua2.Models.Cancion
@{
    ViewData["Title"] = "Detalles de Canción";
}
<h1>@ViewData["Title"]</h1>
<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Duración</dt>
        <dd class="col-sm-10">@Model.Duracion</dd>
        <dt class="col-sm-2">Álbum</dt>
        <dd class="col-sm-10">@Model.Album?.Titulo</dd>
        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">@Model.Artista</dd>
        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.Genero</dd>
        <dt class="col-sm-2">Fecha de Lanzamiento</dt>
        <dd class="col-sm-10">@Model.FechaLanzamiento.ToShortDateString()</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
