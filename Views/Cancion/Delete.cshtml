@model Joshua2.Models.Cancion
@{
    ViewData["Title"] = "Eliminar Canción";
}
<h1>@ViewData["Title"]</h1>
<h3>¿Estás seguro de que deseas eliminar esta canción?</h3>
<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Álbum</dt>
        <dd class="col-sm-10">@Model.Album?.Titulo</dd>
        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">@Model.Artista</dd>
        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.Genero</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
