@model IEnumerable<Joshua2.Models.Album>

@{
    ViewData["Title"] = "Álbumes";
}

<h1>Lista de Álbumes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Artista</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Titulo</td>
                <td>@album.Artista?.Nombre</td>
                <td>
                    <a asp-action="Details" asp-route-id="@album.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@album.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@album.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear nuevo álbum</a>
