@model Joshua2.Models.Album

@{
    ViewData["Title"] = "Eliminar Álbum";
}

<h1>Eliminar Álbum</h1>

<h3>¿Estás seguro de que deseas eliminar este álbum?</h3>
<div>
    <h4>@Model.Titulo</h4>
    <dl class="row">
        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">@Model.Artista?.Nombre</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>