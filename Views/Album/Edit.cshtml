@model Joshua2.Models.Album

@{
    ViewData["Title"] = "Editar Álbum";
}

<h1>Editar Álbum</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ArtistaId" class="control-label">Artista</label>
        <select asp-for="ArtistaId" class="form-control"
                asp-items="ViewBag.ArtistaId">
            <option value="">-- Selecciona un artista --</option>
        </select>
        <span asp-validation-for="ArtistaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
